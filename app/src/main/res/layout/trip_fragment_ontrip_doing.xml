<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:fitsSystemWindows="true"
             tools:context="cn.nandem.qugui.MainActivity">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <RelativeLayout
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/shape_current_trip_black_border">
                <View
                        android:id="@+id/tem_centerVLine"
                        android:layout_width="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_height="2dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:visibility="invisible"
                        android:background="#aa000000"/>
                <View
                        android:id="@+id/tem_centerHLine"
                        android:layout_width="2dp"
                        android:layout_centerHorizontal="true"
                        android:layout_height="match_parent"
                        android:layout_marginTop="26dp"
                        android:layout_marginBottom="26dp"
                        android:background="#aa000000"/>
                <View
                        android:layout_width="match_parent"
                        android:layout_above="@id/tem_centerVLine"
                        android:layout_marginBottom="50dp"
                        android:layout_height="2dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:background="#aa000000" android:id="@+id/view3"/>
                <View
                        android:layout_width="match_parent"
                        android:layout_below="@id/tem_centerVLine"
                        android:layout_marginTop="50dp"
                        android:layout_height="2dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:background="#aa000000" android:id="@+id/view4"/>
                <Button
                        android:text="☷"
                        android:layout_width="100dp"
                        android:layout_height="50dp" android:layout_above="@+id/view3"
                        android:layout_toStartOf="@+id/tem_centerHLine" android:layout_marginEnd="20dp"
                        android:background="#000000"
                        android:textColor="#FFFFFF"
                        android:layout_marginBottom="20dp" android:id="@+id/button4"/>
                <Button
                        android:text="☳"
                        android:layout_width="100dp"
                        android:layout_height="50dp" android:layout_alignTop="@+id/button4"
                        android:layout_toEndOf="@+id/tem_centerHLine" android:layout_marginStart="20dp"
                        android:background="#000000"
                        android:textColor="#FFFFFF"
                        android:id="@+id/button5"/>
                <Button
                        android:text="☱"
                        android:layout_width="100dp"
                        android:layout_height="50dp" android:layout_centerVertical="true"
                        android:background="#000000"
                        android:textColor="#FFFFFF"
                        android:layout_alignEnd="@+id/button4" android:id="@+id/button6"/>
                <Button
                        android:text="☰"
                        android:layout_width="100dp"
                        android:layout_height="50dp" android:layout_alignTop="@+id/button6"
                        android:background="#000000"
                        android:textColor="#FFFFFF"
                        android:layout_alignStart="@+id/button5" android:id="@+id/button7"/>
                <Button
                        android:text="☴"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="21dp" android:id="@+id/button8" android:layout_below="@+id/view4"
                        android:background="#000000"
                        android:textColor="#FFFFFF"
                        android:layout_alignStart="@+id/button6"/>
                <Button
                        android:text="☶"
                        android:layout_width="100dp"
                        android:layout_height="50dp" android:layout_alignTop="@+id/button8"
                        android:background="#000000"
                        android:textColor="#FFFFFF"
                        android:layout_alignStart="@+id/button7" android:id="@+id/button9"/>
            </RelativeLayout>

        </RelativeLayout>


    </android.support.design.widget.CoordinatorLayout>
</FrameLayout>