<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:id="@+id/coord"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="0dp"
            app:cardMaxElevation="8dp"
            app:cardPreventCornerOverlap="true"
            android:layout_margin="16dp">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_current_trip_black_border_2dp">

            <Button
                    android:text="成都"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:background="#000000"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:layout_marginTop="41dp"
                    android:id="@+id/button7"
                    android:layout_alignParentTop="true" android:layout_alignParentStart="true"/>
            <TextView
                    android:text="— •去归• —"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="30dp"
                    android:layout_marginBottom="20dp"
                    android:letterSpacing="0"
                    android:background="#FFFFFF"
                    android:id="@+id/textView7"
                    android:layout_alignParentEnd="true"/>
            <TextView
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:id="@+id/textView8"
                    android:layout_centerVertical="true" android:layout_alignStart="@+id/textView9"/>
            <TextView
                    android:text="\u3000\u3000成都，号称一个来了就不想走的城市，但事实是不是这样呢，我们必须亲自走一遭才能知晓。"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="45dp"
                    android:id="@+id/textView9"
                    android:layout_below="@+id/button7"
                    android:layout_centerHorizontal="true"/>

            <TextView
                    android:text="\u3000\u3000和我在成都的街头走一走，直到所有的灯都熄灭了也不停留。\n\u3000\u3000在那座阴雨的小城里，我从未忘记你，成都，带不走的，只有你。"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="30dp"
                    android:id="@+id/textView10"
                    android:layout_below="@+id/textView9"
                    android:layout_centerHorizontal="true"/>
            <TextView
                    android:text="\u3000\u3000落魄西州泥酒杯，酒酣几度上琴台。青鞋自笑无羁束，又向文君井畔来。"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginTop="30dp"
                    android:id="@+id/textView11"
                    android:layout_below="@+id/textView10"
                    android:layout_centerHorizontal="true"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>