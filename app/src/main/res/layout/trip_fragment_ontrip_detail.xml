<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/coord"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar"/>

    <RelativeLayout
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent" tools:showIn="@layout/trip_fragment_ontrip_detail">
        <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:srcCompat="@mipmap/mimi"
                android:id="@+id/imageView2"
                android:layout_centerHorizontal="true"/>
        <Button
                android:text="拍照"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:background="#000"
                android:textColor="#fff"
                android:id="@+id/button2"
                android:layout_centerVertical="true" android:layout_alignStart="@+id/button3"/>
        <Button
                android:text="上传"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:id="@+id/button3"
                android:background="#000"
                android:textColor="#fff"
                android:layout_below="@+id/button2" android:layout_centerHorizontal="true" android:layout_marginTop="10dp"/>

        <!--<TextView-->
        <!--android:id="@+id/tv_content"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:transitionName="tv"-->
        <!--android:layout_margin="@dimen/text_margin"/>-->
    </RelativeLayout>
</LinearLayout>