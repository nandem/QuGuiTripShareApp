<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
             android:fitsSystemWindows="true"
             tools:context="cn.nandem.qugui.MainActivity">


    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="0dp"
            app:cardMaxElevation="8dp"
            app:cardPreventCornerOverlap="true"
            android:layout_margin="16dp">
        <android.support.v7.widget.GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:columnCount="2"
                app:rowCount="3"
                app:useDefaultMargins="false"
                android:padding="1dp"
                android:background="@drawable/shape_current_trip_black_border_1dp">

            <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1"
                    android:padding="5dp"
                    android:background="@drawable/shape_current_trip_black_border_1dp">
                <ImageView android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/trip_on_trip_iv_1st_box"
                                android:background="@mipmap/mimi"
                           android:scaleType="centerCrop"/>
                    <Button
                            android:text="☷"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:textColor="#FFFFFF"
                            android:background="#000000"
                            android:id="@+id/trip_on_trip_btn_1st_phase"/>
            </RelativeLayout>
            <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1"
                    android:padding="5dp"
                    android:background="@drawable/shape_current_trip_black_border_1dp">
                <ImageView android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/trip_on_trip_iv_2nd_box"
                                android:background="@mipmap/logo"
                           android:scaleType="centerCrop"/>
                    <Button
                            android:text="☳"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:textColor="#FFFFFF"
                            android:background="#000000"
                            android:id="@+id/trip_on_trip_btn_2nd_phase"/>
            </RelativeLayout>
            <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1"
                    android:padding="5dp"
                    android:background="@drawable/shape_current_trip_black_border_1dp">
                <ImageView android:layout_width="match_parent"
                                android:layout_height="match_parent"
                android:id="@+id/trip_on_trip_iv_3rd_box"
                           android:scaleType="centerCrop"/>
                    <Button
                            android:text="☱"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:textColor="#FFFFFF"
                            android:background="#000000"
                            android:id="@+id/trip_on_trip_btn_3rd_phase"/>
            </RelativeLayout>
            <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1"
                    android:padding="5dp"
                    android:background="@drawable/shape_current_trip_black_border_1dp">
                <ImageView android:layout_width="match_parent"
                                android:layout_height="match_parent"
                           android:id="@+id/trip_on_trip_iv_4th_box"
                           android:scaleType="centerCrop"/>
                    <Button
                            android:text="☰"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:textColor="#FFFFFF"
                            android:background="#000000"
                            android:id="@+id/trip_on_trip_btn_4th_phase"/>
            </RelativeLayout>
            <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1"
                    android:padding="5dp"
                    android:background="@drawable/shape_current_trip_black_border_1dp">
                <ImageView android:layout_width="match_parent"
                                android:layout_height="match_parent"
                           android:id="@+id/trip_on_trip_iv_5th_box"
                           android:scaleType="centerCrop"/>
                    <Button
                            android:text="☴"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:textColor="#FFFFFF"
                            android:background="#000000"
                            android:id="@+id/trip_on_trip_btn_5th_phase"/>
            </RelativeLayout>
            <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_columnWeight="1"
                    app:layout_rowWeight="1"
                    android:padding="5dp"
                    android:background="@drawable/shape_current_trip_black_border_1dp">
                <ImageView android:layout_width="match_parent"
                                android:layout_height="match_parent"
                           android:id="@+id/trip_on_trip_iv_6th_box"
                           android:scaleType="centerCrop"/>
                    <Button
                            android:text="☷"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:textColor="#FFFFFF"
                            android:background="#000000"
                            android:id="@+id/trip_on_trip_btn_6th_phase"/>
            </RelativeLayout>

        </android.support.v7.widget.GridLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>